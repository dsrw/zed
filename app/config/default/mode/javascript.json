{
    "modes": {
        "javascript": {
            "name": "JavaScript",
            "highlighter": "ace/mode/javascript",
            "extensions": ["js"],

            "commands": {
                "Tools:Check": {
                    "scriptUrl": "/default/mode/javascript/check.js",
                    "options": {
                        "undef": true,
                        "unused": true,
                        "es5": true,
                        "esnext": true,
                        "devel": true,
                        "browser": true,
                        "node": true,
                        "laxcomma": true,
                        "laxbreak": true,
                        "lastsemic": true,
                        "onevar": false,
                        "passfail": false,
                        "maxerr": 100,
                        "expr": true,
                        "multistr": true,
                        "globalstrict": true
                    }
                },
                "Tools:CTags": {
                    "scriptUrl": "/default/mode/javascript/ctags.js"
                },

                "Tools:Beautify": {
                    "scriptUrl": "/default/mode/javascript/beautify.js"
                },

                "Tools:Complete:Snippet": {
                    "scriptUrl": "/default/command/snippet_completer.js",
                    "snippets": {
                        "log": "console.log(${1})",
                        "def": "define(function(require, exports, module) {\n\t${1}\n});",
                        "fn": "function ${1}(${2}) {\n\t${3}\n}",
                        "foreach": "for(var ${1:i} = 0; ${1:i} < ${2:array}.length; ${1:i}++) {\n\tvar ${3:item} = ${2:array}[${1:i}];\n\t${4}\n}",
                        "forEach": "forEach(function(${0:el}) {\n\t${1}\n});",
                        "setTimeout": "setTimeout(function() {\n\t${1}\n}, ${2:0})",
                        "iterkeys": "Object.keys(${1:obj}).forEach(function(${2:key}) {\n\t${3}\n});"
                    }
                }
            },

            "handlers": {
                "change": ["Tools:CTags"],
                "check": ["Tools:Check"],
                "complete": ["Tools:Complete:Snippet"]
            }
        }
    }
}