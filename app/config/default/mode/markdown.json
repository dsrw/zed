{
    "modes": {
        "markdown": {
            "name": "Markdown",
            "highlighter": "ace/mode/markdown",
            "extensions": ["md", "txt", "markdown"],
            "filenames": ["zed::start"],

            "commands": {
                "Tools:Beautify": {
                    "scriptUrl": "/default/mode/markdown/beautify.js"
                },
                "Tools:Preview": {
                    "scriptUrl": "/default/mode/markdown/preview.js"
                }
            },

            "preferences": {
                "wordWrap": true,
                "wordWrapColumn": 80
            },

            "handlers": {
                "preview": ["Tools:Preview"],
                "check": ["Tools:Spelling:Check"],
                "fix": ["Tools:Spelling:Fix"]
            }
        }
    }
}